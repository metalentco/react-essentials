service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /users/{uid} {
      allow write: if request.resource.data.keys().hasOnly(['email']) || request.resource.data.keys().hasOnly(['email', 'firstName', 'lastName'])
      && request.resource.data.firstName is string
      && request.resource.data.lastName is string
      && request.auth.uid != null;
      allow update: if request.resource.data.keys().hasOnly(['email', 'firstName', 'lastName'])
      && request.resource.data.firstName is string
      && request.resource.data.lastName is string
      && request.auth.uid != null;
      allow read: if true;
    }
  }
}